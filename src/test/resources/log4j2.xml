<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="net.wedjaa.elasticparser" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="net.wedjaa.elasticparser.pager" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="net.wedjaa.elasticparser.resolver" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="net.wedjaa.elasticparser.ESSearchTest" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.elasticsearch" level="error" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>